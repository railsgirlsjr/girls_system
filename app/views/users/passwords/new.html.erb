<div class="uk-width-xxlarge uk-margin uk-align-center">
  <div class="uk-card uk-card-small uk-card-default uk-card-body">
    <h2><%= t('.forgot_your_password') %></h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>

      <div class="uk-margin">
        <div class="uk-inline">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "uk-input uk-form-width-large" %>
        </div>
      </div>

      <div class="actions">
        <%= f.submit t('.send_me_reset_password_instructions'), class: "uk-button uk-button-primary" %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</div>
