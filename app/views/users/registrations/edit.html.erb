<div class="uk-width-xxlarge uk-margin uk-align-center">
  <div class="uk-card uk-card-small uk-card-default uk-card-body">
    <h2><%= t('.title', resource: resource_name.to_s.humanize) %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>

      <div class="uk-margin">
        <div class="uk-inline">
          <%= f.label :nickname %><br />
          <%= f.text_field :nickname, autofocus: true, autocomplete: "text", class: "uk-input uk-form-width-large" %>
        </div>
      </div>

      <div class="uk-margin">
        <div class="uk-inline">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "uk-input uk-form-width-large" %>
        </div>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div><%= t('.currently_waiting_confirmation_for_email', email: resource.unconfirmed_email) %></div>
      <% end %>

      <div class="uk-margin">
        <div class="uk-inline">
          <%= f.label :password %> <i>(<%= t('.leave_blank_if_you_don_t_want_to_change_it') %>)</i> <br />
          <%= f.password_field :password, autocomplete: "off", class: "uk-input uk-form-width-large" %>
          <% if @minimum_password_length %>
            <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
          <% end %>
        </div>
      </div>

      <div class="uk-margin">
        <div class="uk-inline">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "uk-input uk-form-width-large" %>
        </div>
      </div>

      <div class="uk-margin">
        <div class="uk-inline">
          <%= f.label :current_password %> <i>(<%= t('.we_need_your_current_password_to_confirm_your_changes') %>)</i> <br />
          <%= f.password_field :current_password, autocomplete: "off", class: "uk-input uk-form-width-large" %>
        </div>
      </div>

      <div class="actions">
        <%= f.submit t('.update'), class: "uk-button uk-button-primary" %>
      </div>
    <% end %>

    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <a href="http://gravatar.com/emails" target="_blank">change</a>
    </div>


    <h3><%= t('.cancel_my_account') %></h3>

    <p>
      <%= t('.unhappy') %>
      <%= button_to t('.cancel_my_account'),
        registration_path(resource_name),
        data: { confirm: t('.are_you_sure') },
        method: :delete,
        class: "uk-button uk-button-danger" %>
    </p>

    <%= link_to t('devise.shared.links.back'), :back %>

  </div>
</div>
