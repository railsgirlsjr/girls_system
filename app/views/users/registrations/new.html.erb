<div class="uk-width-xxlarge uk-margin uk-align-center">
  <div class="uk-card uk-card-small uk-card-default uk-card-body">

    <h2><%= t('.sign_up') %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="uk-margin">
        <div class="uk-inline">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "uk-input uk-form-width-large" %>
        </div>
      </div>

      <div class="uk-margin">
        <div class="uk-inline">
          <%= f.label :nickname %><br />
          <%= f.email_field :nickname, autofocus: true, autocomplete: "text", class: "uk-input uk-form-width-large" %>
        </div>
      </div>

      <div class="uk-margin">
        <div class="uk-inline">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "off", class: "uk-input uk-form-width-large" %>
        </div>
      </div>

      <div class="uk-margin">
        <div class="uk-inline">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "uk-input uk-form-width-large" %>
        </div>
      </div>

      <div class="actions">
        <%= f.submit t('.sign_up'), class: "uk-button uk-button-primary" %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>

  </div>
</div>
